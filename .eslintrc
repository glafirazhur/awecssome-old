{
  "parser": "babel-eslint",
  "env": {    
    "browser": true,
    "node": true
  }, 
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "semi": ["error", "always"],
    "no-console": [0]
  },
  "extends": "eslint:recommended",
  "globals": {
    "angular": 1,
    "console": 1,
    "Promise": 1,
    "io": 1,
    "$": 1
  },
  "parserOptions": {
    "sourceType":"module",
      "ecmaFeatures": {
          "modules": true
      }
  }
}